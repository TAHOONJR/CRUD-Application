@model Items
@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <div class="row pb-2">
        <h2 class="col-12">Delete Item</h2>
    <div class="row pb-2">
        <div class="col-2">
            <label asp-for="Id"></label>
        </div>
        <div class="col-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
        
    </div>
        <div class="col-2">
            <label asp-for="Name"></label>
        </div>
        <div class="col-10">
            <input asp-for="Name" disabled class="form-control" />
        </div>
    </div>
    <div class="row pb-2">
        <div class="col-2">
            <label asp-for="Price"></label>
        </div>
        <div class="col-10">
            <input asp-for="Price" disabled class="form-control" />
        </div>
    </div>
    <div class="row pb-2">
        <div class="col-2">
            <label asp-for="Description"></label>
        </div>
        <div class="col-10">
            <input asp-for="Description" disabled class="form-control" />
        </div>
    </div>
    <div class="row pb-2">
            <div class="col-2">
                <label asp-for="CategoryId"></label>
            </div>
        <div class="col-10">
            <select asp-for="CategoryId" disabled class="form-control">
                <option value="0">Select Category</option>
                <option value="1">Electronics</option>
                <option value="2">Food</option>
                <option value="3">Other</option>
            </select>
        </div>
    </div>
    <div class="row pb-2">
        <div class="col-2">
            <label asp-for="CreateDate"></label>
        </div>
        <div class="col-10">
            <input asp-for="CreateDate" class="form-control" />
        </div>
    </div>
    
    <div class="row pb-2">
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Delete</button>
            <a asp-action="Index" asp-controller="Items" class="btn btn-secondary">Back</a>
        </div>
    </div>
</form>