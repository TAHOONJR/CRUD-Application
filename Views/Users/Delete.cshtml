@model Users
@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <div class="row pb-2">
        <h2 class="col-12">Delete User</h2>
    <div class="row pb-2">
        <div class="col-2">
            <label asp-for="Id"></label>
        </div>
        <div class="col-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
        
    </div>
        <div class="col-2">
            <label asp-for="Name"></label>
        </div>
        <div class="col-10">
            <input asp-for="Name" disabled class="form-control" />
        </div>
    </div>
    <div class="row pb-2">
        <div class="col-2">
            <label asp-for="Email"></label>
        </div>
        <div class="col-10">
            <input asp-for="Email" disabled class="form-control" />
        </div>
    </div>
    <div class="row pb-2">
        <div class="col-2">
            <label asp-for="Password"></label>
        </div>
        <div class="col-10">
            <input asp-for="Password" disabled class="form-control" />
        </div>
    </div>
    <div class="row pb-2">
            <div class="col-2">
                <label asp-for="Role"></label>
            </div>
        <div class="col-10">
            <select asp-for="Role" disabled class="form-control">
                <option value="admin">Admin</option>
                <option value="user">User</option>
            </select>
        </div>
    </div>
    
    <div class="row pb-2">
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Delete</button>
            <a asp-action="Index" asp-controller="Users" class="btn btn-secondary">Back</a>
        </div>
    </div>
</form>